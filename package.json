{
  "name": "hapicasts",
  "version": "0.0.1",
  "description": "A screencast series on hapijs",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "lab -a code -t 100 -L",
    "build": "browserify -p [minifyify --no-map] --extension .jsx -t reactify  public/**/*.jsx -o public/js/bundle.js",
    "watch": "watchify -p [minifyify --no-map] --extension .jsx -t reactify public/**/*.jsx --outfile public/js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtharrison/hapicasts.git"
  },
  "keywords": [
    "hapi",
    "learning",
    "screencasts",
    "hapijs",
    "node.js"
  ],
  "author": "Matt Harrison",
  "license": "BSD-3",
  "bugs": {
    "url": "https://github.com/mtharrison/hapicasts/issues"
  },
  "homepage": "https://github.com/mtharrison/hapicasts",
  "dependencies": {
    "browserify": "^11.0.1",
    "glue": "^2.1.1",
    "handlebars": "^3.0.3",
    "hapi": "^8.8.1",
    "items": "^1.1.0",
    "moment": "^2.10.6",
    "nodemon": "^1.4.0",
    "react": "^0.13.3",
    "reactify": "^1.1.1",
    "wreck": "^6.1.0"
  },
  "devDependencies": {
    "code": "^1.5.0",
    "minifyify": "^7.0.5",
    "react-tools": "^0.13.3",
    "watchify": "^3.3.1"
  }
}
